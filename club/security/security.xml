<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- TODO Add a field name 'category_id' = 'Club Membership Manager' for all groups of this module -->
<data>
    <!-- Categories -->
    <record id="module_category_committee" model="ir.module.category">
        <field name="name">Committee</field>
        <field name="description">Helps you to manage club groups.</field>
        <field name="sequence">10</field>
    </record>

    <!-- Groups -->
    <record id="group_club_committee_user" model="res.groups">
        <field name="name">User</field>
        <field name="comment">Committee users for the module Club Membership Manager. They usually have only a read access to the application.</field>
        <field name="category_id" ref="module_category_committee"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="group_club_committee_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">Committee managers for the module Club Membership Manager. On top of the committee users, managers can usually create/modify/delete records.</field>
        <field name="category_id" ref="module_category_committee"/>
        <field name="implied_ids" eval="[(4, ref('group_club_committee_user'))]"/>
    </record>
    <record id="group_club_president" model="res.groups">
        <field name="name">President</field>
        <field name="implied_ids" eval="[(4, ref('group_club_committee_user'))]"/>
        <field name="comment">Users with attribute 'president' set to True for the module Club Membership Manager.</field>
    </record>
    <record id="group_club_secretary" model="res.groups">
        <field name="name">Secretary</field>
        <field name="implied_ids" eval="[(4, ref('group_club_committee_user'))]"/>
        <field name="comment">Users with attribute 'secretary' set to True for the module Club Membership Manager.</field>
    </record>
    <record id="group_club_treasurer" model="res.groups">
        <field name="name">Treasurer</field>
        <field name="implied_ids" eval="[(4, ref('group_club_committee_user'))]"/>
        <field name="comment">Users with attribute 'treasurer' set to True for the module Club Membership Manager.</field>
    </record>

    <!-- Set the "Internal User" group as the only group for the user "Default User Template" -->
    <function id="function_update_record" name="_update_record" model="res.users">
        <value eval="{'model': 'res.users',
                      'browse_id': [ref('base.default_user')],
                      'write_values': {'groups_id': [(6, 0, [ref('base.group_user')])]}}"/>
    </function>
</data>
</odoo>
