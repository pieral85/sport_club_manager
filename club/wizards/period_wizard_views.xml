<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="period_wizard_form_view" model="ir.ui.view">
        <field name="name">period.wizard.form</field>
        <field name="model">period_wizard</field>
        <field name="arch" type="xml">
            <form string="Period Duplication">
                <group>
                    <group>
                        <field name="period_id" string="Period to Duplicate"/>
                        <field name="name" string="New Name"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button name="duplicate" type="object"
                            string="Duplicate Period" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</data>
</odoo>
