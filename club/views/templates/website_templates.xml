    <!-- Web Page showing info on the club -->
    <template id="website_info_club" inherit_id="website.aboutus">
        <xpath expr="//div[@id='wrap']" position="replace">
            <section class="s_company_team pt48 pb48">
                <div class="container">
                    <h1 style="text-align: center;">Comittee Info</h1>
                    <t t-foreach="committee" t-as="status">
                        <h2><t t-esc="status[0]"/></h2>
                        <div class="row s_nb_column_fixed">
                            <t t-foreach="status[1]" t-as="member">
                                <div class="col-lg-6 pt32 pb16">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <div class="col-lg-4">
                                            <img t-if="member.image_128" class="img-fluid rounded-circle d-block mx-auto shadow o_portal_committee_img" t-att-src="image_data_uri(member.image_128)" alt="Comittee"/>
                                        </div>
                                        <div class="col-lg-8">
                                            <h3><p t-field="member.name"/></h3>
                                            <p t-field="member.email"/>
                                            <!-- TODO Implement a html field and add it here -->
                                            <p class="text-muted"></p>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
            </section>
        </xpath>
    </template>

    <template id="membership_assets_frontend" inherit_id="web.assets_frontend" name="Membership Assets Frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/less" href="/club/static/src/less/membership.less"/>
        </xpath>
    </template>
</odoo>
