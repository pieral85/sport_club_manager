<odoo>
<data>
<!-- Web Page showing info on the active periods -->
<template id="website_period">
    <t t-call="website.layout">
        <t t-set="title">Periods</t>
        <div class="oe_structure">
        </div>
        <div class="oe_structure">
            <div class="container">
                <div class="row">
                    <a href="/sport/add" class="btn btn-primary btn-lg">Add</a>
                </div>
                <t t-foreach="periods" t-as="period">
                    <p>
                        <h2><t t-esc="period.name"/></h2>
                        From <t t-esc="period.start_date"/>
                        To <t t-esc="period.end_date"/>
                    </p>
                    <div class="row">
                        <a href="/sport/membership/request" class="btn btn-primary btn-lg">Request an affiliation for this period</a>
                    </div>
                    <p><h3>Categories</h3></p>
                    <t t-foreach="period.period_category_ids" t-as="period_category">
                        <p>Name: <t t-esc="period_category.category_id.name"/></p>
                        <p>Price Due: <t t-esc="period_category.price_due"/></p>
                        <!-- <t t-esc=""/>
                        <t t-esc=""/> -->
<!-- 
                        <p><a t-attf-href="/academy/{{ slug(session) }}"><t t-esc="session.name"/></a></p>
                        <p>Last modified: <i t-field="session.write_date" t-field-options='{"format": "long"}' /></p>
                        <div t-field="session.description" />
                         -->
                    </t>
                 </t>
            </div>
        </div>
        <div class="oe_structure">
        </div>
    </t>
</template>

<!-- Web Page showing info on the user -->
<template id="website_member_info">
    <t t-call="website.layout">
        <t t-set="title">Member Info</t>
        <!-- <div class="oe_structure"/> -->
        <div class="oe_structure">
            <div class="container">
                <p><t t-esc="player.id"/> <t t-esc="player.login"/> <t t-esc="player.name"/></p>
            </div>
        </div>
        <div class="oe_structure"/>
    </t>
</template>

<!-- Web Page showing info on the club -->
<template id="website_info_club">
    <t t-call="website.layout">
        <t t-set="title">Club Info</t>
        <!-- <div class="oe_structure"/> -->
        <div class="oe_structure">
            <div class="container">
                <h2>Comittee Info</h2>                        
                <t t-foreach="committee" t-as="status">
                    <t t-foreach="status[1]" t-as="member">
                        <t t-if="member_first"><h3><t t-esc="status[0]"/></h3></t>
                        <div class="container">
                            <a t-attf-href="/sport/members/{{ slug(member) }}">
                            <p t-field="member.name"/>
                            <p t-field="member.login"/>
                            </a>
                        </div>
                    </t>
                </t>
            </div>
        </div>
        <div class="oe_structure"/>
    </t>
</template>

<template id="website_membership_request" name="Request Affiliation">
    <t t-call="website.layout">
        <t t-set="additional_title">Request an Affiliation</t>
        <div id="wrap" class="container">
            <div class="row">
                <section id="forms">
                    <form method="post" class="s_website_form container-fluid form-horizontal" action="/website_form/" data-model_name="membership" data-success_page="/sport/info_club" enctype="multipart/form-data">
                        <!-- Select Period -->
                        <div class="form-group form-field">
                            <div class="col-md-3 col-sm-4 text-right">
                                <label class="control-label" for="period_category_id">Select Period and Category</label>
                            </div>
                            <div class="col-md-7 col-sm-8">
                                <select name="period_category_id" class="o_website_from_input form-control">
                                    <t t-foreach="period_categories" t-as="period_category">
                                        <option t-att-value="period_category.id">
                                            <t t-esc="period_category.name_get()[0][1]"/>
                                            <!-- <t t-esc="period_category.name_get()[0][1]"/> -->
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <!-- <div class="col-md-3 col-sm-4 text-right">
                                <label class="control-label" for="period_id">Select Period and Category</label>
                            </div>
                            <div class="col-md-7 col-sm-8">
                                <select name="period_id" class="o_website_from_input form-control">
                                    <t t-foreach="periods" t-as="period">
                                        <option t-att-value="period.id">
                                            <t t-esc="period.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div> -->
                        </div>
                        <!-- Name text field, required -->
                        <!-- <div class="form-group form-field">
                            <div class="col-md-3 col-sm-4 text-right">
                                <label class="control-label" for="state">State</label>
                            </div>
                            <div class="col-md-7 col-sm-8">
                                <input name="state" type="text" required="True" class="o_website_from_input form-control" t-att-placeholder="status"/>
                            </div>
                        </div> -->
                        <!-- <div class="form-group form-field">
                            <div class="col-md-3 col-sm-4 text-right">
                                <label class="control-label" for="tutu">TOTO*</label>
                            </div>
                            <div class="col-md-7 col-sm-8">
                                <input name="tutu" type="text" required="True" class="o_website_form_input form-control"/>
                            </div>
                        </div> -->
                        <!-- Submit button -->
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-7 col-sm-offset-4 col-sm-8">
                                <a class="o_website_form_send btn btn-primary btn-lg">
                                    Request this membership
                                </a>
                                <span id="o_website_form_result"></span>
                            </div>                            
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </t>
</template>

