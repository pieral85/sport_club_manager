<!-- TODO Add a field name 'category_id' = 'Sport Club Manager' for all groups of this module -->
<odoo>
    <data>

        <!-- Groups -->
        <record id="group_sport_club_manager_committee" model="res.groups">
            <field name="name">Committee</field>
            <field name="comment">Committee members for the module Sport Club Manager.</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_sport_club_manager_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">Manager of the module Sport Club Manager.</field>
            <field name="implied_ids" eval="[(4, ref('group_sport_club_manager_committee'))]"/>
        </record>

        <record id="group_sport_club_manager_president" model="res.groups">
            <field name="name">President</field>
            <field name="implied_ids" eval="[(4, ref('group_sport_club_manager_committee'))]"/>
            <field name="comment">Users with attribute 'president' set to True for the module Sport Club Manager.</field>
        </record>

        <record id="group_sport_club_manager_secretary" model="res.groups">
            <field name="name">Secretary</field>
            <field name="implied_ids" eval="[(4, ref('group_sport_club_manager_committee'))]"/>
            <field name="comment">Users with attribute 'secretary' set to True for the module Sport Club Manager.</field>
        </record>

        <record id="group_sport_club_manager_treasurer" model="res.groups">
            <field name="name">Treasurer</field>
            <field name="implied_ids" eval="[(4, ref('group_sport_club_manager_committee'))]"/>
            <field name="comment">Users with attribute 'treasurer' set to True for the module Sport Club Manager.</field>
        </record>

        <!-- Set the "Employee" group as the only group for the user "Default User Template" -->
        <function id="function_update_record" name="_update_record" model="res.users">
            <value eval="{'model': 'res.users',
                          'browse_id': [ref('base.default_user')],
                          'write_values': {'groups_id': [(6, 0, [ref('base.group_user'), ref('base.group_portal')])]}}"/>
        </function>

    </data>
</odoo>
