<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Link for user settings -->
        <template id="my_settings_link" name="Link to frontend portal settings" inherit_id="portal.frontend_layout">
            <xpath expr="//a[@id='o_logout']" position="before">
                <a href="/my/account" role="menuitem" class="dropdown-item">My Settings</a>
            </xpath>
        </template>

        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('group_scm_committee_manager'))]"/>
        </record>
    </data>
</odoo>
