<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- tree view(s) -->
        <record id="membership_view_list" model="ir.ui.view">
            <field name="name">membership list</field>
            <field name="model">membership</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="period_id"/>
                    <field name="category_id"/>
                    <field name="state"/>
                    <field name="price_due" sum="Total"/>
                    <field name="price_paid" sum="Total"/>
                    <field name="price_remaining" sum="Total"/>
                    <field name="price_paid_percentage" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <!-- form view(s) -->
        <record id="membership_view_form" model="ir.ui.view">
            <field name="name">membership form</field>
            <field name="model">membership</field>
            <field name="arch" type="xml">
                <form>
                    <field name="price_remaining" invisible="1"/>
                    <field name="period_category_id" invisible="1"/>
                    <field name="paid" invisible="1"/>
                    <field name="mail_sent" invisible="1"/>
                    <field name="invitation_mail_sent" invisible="1"/>
                    <header>
                        <button name="validate_membership_payment" type="object" string="Payment Receipt" class="btn-primary" attrs="{'invisible': [('paid', '=', True)]}"/>
                        <button name="send_email_invitation" type="object" string="Send Invitation Email" class="btn-primary" attrs="{'invisible': ['|',('invitation_mail_sent', '=', True), ('state', 'in', ['requested', 'member', 'rejected'])]}" confirm="Do you want to send an email to the user to invite him for his membership validation?"/>
                        <button name="send_email_invitation" type="object" string="ReSend Invitation Email" class="" attrs="{'invisible': ['|',('invitation_mail_sent', '=', False), ('state', 'in', ['requested', 'member', 'rejected'])]}" confirm="Do you want to send again an email to the user to invite him for his membership validation?"/>
                        <button name="validate_membership_affiliation" type="object" string="Validate Affiliation" class="btn-primary" attrs="{'invisible': [('state', '=', 'member')]}"/>
                        <button name="send_email" type="object" string="Send Confirmation Email" attrs="{'invisible': ['|', ('state', '!=', 'member'), ('mail_sent', '=', True)]}" class="btn-primary" confirm="Do you want to send an email to the user to advise him of his membership?" help="Sends an email to the user to let him know of his membership."/>
                        <button name="send_email" type="object" string="ReSend Confirmation Email" attrs="{'invisible': ['|', ('state', '!=', 'member'), ('mail_sent', '=', False)]}" class="" confirm="An email for this membership has already been sent. Do you want to send it again?" help="Sends an email to the user to let him know of his membership."/>
                        <button name="reject_membership_affiliation" type="object" string="Reject Affiliation" attrs="{'invisible': [('state', '=', 'rejected')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="unknown,old_member,requested,member"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="user_id"/>
                            <field name="period_id" class="o_task_user_field"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="price_paid"/>
                            <field name="price_due"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- graph view(s) -->
        <!-- Prices per player with period details -->
        <record id="membership_view_graph_users" model="ir.ui.view">
            <field name="name">membership graph users</field>
            <field name="model">membership</field>
            <field name="arch" type="xml">
                <graph string="Prices per User" type="bar" stacked="1">
                    <field name="user_id" type="row"/>
                    <field name="period_id" type="row"/>
                    <field name="price_remaining" type="measure"/>
                    <field name="price_paid" type="measure"/>
                    <field name="price_due" type="measure"/>
                </graph>
            </field>
        </record>
        <!-- Prices per period with user subdivision -->
        <record id="membership_view_graph_periods" model="ir.ui.view">
            <field name="name">membership graph periods</field>
            <field name="model">membership</field>
            <field name="arch" type="xml">
                <graph string="Prices per Period" type="bar" stacked="1">
                    <field name="period_id" type="row"/>
                    <field name="user_id" type="row"/>
                    <field name="price_remaining" type="measure"/>
                    <field name="price_paid" type="measure"/>
                    <field name="price_due" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- pivot view(s) -->
        <record id="membership_view_pivot" model="ir.ui.view">
            <field name="name">membership pivot</field>
            <field name="model">membership</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="period_id" type="row"/>
                    <field name="user_id" type="row"/>
                    <field name="state" type="col"/>
                    <field name="price_paid" type="measure"/>
                    <field name="price_due" type="measure"/>
                    <field name="price_remaining" type="measure"/> 
                </pivot>
            </field>
        </record>

        <!-- kanban view(s) -->
        <record id="membership_view_kanban" model="ir.ui.view">
            <field name="name">membership kanban</field>
            <field name="model">membership</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="color"/>
                    <field name="price_paid_percentage"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}} oe_kanban_global_click_edit
                                oe_semantic_html_override oe_kanban_card {{record.group_fancy==1
                                ? 'oe_kanban_card_fancy' : ''}}">
                                <div>
                                    <img t-att-src="kanban_image('res.users', 'image_medium', record.user_id.raw_value)" style="width:60px" class="oe_kanban_avatar pull-right"/>
                                </div>

                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="user_id"/>
                                            </strong>
                                            <span>
                                                <div class="o_dropdown_kanban dropdown col-xs-4" >
                                                    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
                                                        <span class="fa fa-bars fa-lg"/>
                                                    </a>
                                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                                        <t t-if="widget.editable"><li><a type="edit">Edit Membership</a></li></t>
                                                    </ul>
                                                </div>
                                            </span>
                                        </div>
                                    </div>
                                    <ul>
                                        <li>
                                            <span t-if="record.category_id.raw_value" class="o_kanban_record_subtitle">
                                                <i><field name="category_id"/></i>
                                            </span>
                                            <span t-if="record.period_id.raw_value" class="o_kanban_record_subtitle">
                                                <i><field name="period_id"/></i>
                                            </span>
                                        </li>
                                        <li>
                                            <span>Price Paid: </span>
                                            <span t-attf-class="o_text_bold">
                                                <field name="price_paid" widget="monetary"/>
                                            </span>
                                        </li>
                                        <li>
                                            <span>Price Due: </span>
                                            <span t-attf-class="o_text_bold">
                                                <field name="price_due" widget="monetary"/>
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- search view(s) -->
        <record id="membership_search" model="ir.ui.view">
            <field name="name">membership.active.period.search</field>
            <field name="model">membership</field>
            <field name="arch" type="xml">
                <search string="Periods">
                    <filter string="Current Period" name ="current_period_search" icon="terp-gtk-media-pause" domain="[('period_id.current', '=', True)]" help="Memberships of current period."/>
                    <filter string="Upcoming Period" name ="upcoming_period_search" icon="terp-gtk-media-pause" domain="[('period_id.upcoming', '=', True)]" help="Memberships of upcoming period."/>
                    <separator/>
                    <filter string="Payment Due" name ="payment_due_search" icon="terp-gtk-media-pause" domain="[('paid', '=', False)]" help="Memberships with a payment due."/>
                    <separator/>
                    <filter string="Unknown Status" name ="state_unknown_search" icon="terp-gtk-media-pause" domain="[('state', '=', 'unknown')]" help="Memberships with an unknown status."/>
                    <filter string="Old Members" name ="state_old_member_search" icon="terp-gtk-media-pause" domain="[('state', '=', 'old_member')]" help="Members for the previous season."/>
                    <filter string="Requested" name ="state_requested_search" icon="terp-gtk-media-pause" domain="[('state', '=', 'requested')]" help="Memberships with a requested status."/>
                    <filter string="Members" name ="state_member_search" icon="terp-gtk-media-pause" domain="[('state', '=', 'member')]" help="Members only."/>
                    <filter string="Rejected" name ="state_rejected_search" icon="terp-gtk-media-pause" domain="[('state', '=', 'rejected')]" help="Memberships with a rejected status."/>
                    <separator/>
                    <filter string="Active Period(s)" name ="active_period_search" icon="terp-gtk-media-pause" domain="[('period_id.active', '=', True)]" help="Memberships of active period(s)."/>
                    <filter string="Archived Period(s)" name ="inactive_period_search" icon="terp-gtk-media-pause" domain="[('period_id.active', '=', False)]" help="Memberships of archived period(s)."/>
                </search>
            </field>
        </record>
    </data>
</odoo>