<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- tree view(s) -->
        <record id="membership_view_list" model="ir.ui.view">
            <field name="name">membership list</field>
            <field name="model">membership</field>
            <!-- <field name="domain">[('active', '=', False),]</field> -->
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="period_id"/><!--  domain="['|',('active','=',True),('active','=',False)]"/> --><!-- TODO Domain is not working with active! Is it with 'current'? -->
                    <field name="category_id"/>
                    <field name="state"/>
                    <field name="price_paid"/>
                    <field name="price_due"/>
                </tree>
            </field>
        </record>

        <!-- form view(s) -->
        <record id="membership_view_form" model="ir.ui.view">
            <field name="name">membership form</field>
            <field name="model">membership</field>
            <field name="arch" type="xml">
                <form>
                    <field name="price_remaining" invisible="1"/>
                    <field name="period_category_id" invisible="1"/>
                    <header>
                        <button name="validate_membership_payment" type="object" string="Payment Receipt" class="btn-primary" attrs="{'invisible': [('price_remaining', '&lt;=', 0)]}"/>
                        <button name="validate_membership_affiliation" type="object" string="Validate Affiliation" class="btn-info" attrs="{'invisible': [('state', '=', 'member')]}"/>

                        <button name="send_email" type="object" string="Send Email" attrs="{'invisible': [('state', '!=', 'member')]}"/><!-- fa-bars  states="state"--><!-- TODO Try to implement t-attf-class="btn-primary" with variable mail_sent -->
                        <button name="reject_membership_affiliation" type="object" string="Reject Affiliation" attrs="{'invisible': [('state', '=', 'rejected')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="not_member,old_member,requested,member"/>
                    </header>
                    <sheet>
                        <group>
                            <!-- <h1> -->
                            <field name="user_id"/>
                            <!-- </h1> -->
                            
                            <field name="period_id" class="o_task_user_field"/>
                            <field name="category_id"/>
                            <!-- <field name="state"/> -->
                        </group>
                        <group>
                            <field name="price_paid"/>
                            <field name="price_due"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

