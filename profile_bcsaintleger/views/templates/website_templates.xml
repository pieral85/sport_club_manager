  <template id="s_website_sport_complex_address" name="Sport Complex Address">
    <section class="s_features pt32 pb32"><!--  bg-500 oe_custom_bg" style=""> -->
      <div class="container">
        <div class="row">
          <t t-set="sport_complex" t-value="request.env.ref('profile_bcsaintleger.saintleger_sports_complex')"/>
          <div>
            <address class="text-left">
              <div t-field="sport_complex.self" t-options="{
                'widget': 'contact',
                'fields': ['name', 'address', 'website', 'phone', 'email']}"/>
            </address>
          </div>
        </div>
      </div>
    </section>
  </template>


  <template id="sport_complex_snippet" name="Sport Complex Snippets" inherit_id="website.snippets">
      <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
          <t t-snippet="profile_bcsaintleger.s_website_sport_complex_address" t-thumbnail="/interclubs/static/img/sports_complex_2.jpg"/><!-- t-thumbnail="/website/static/src/img/snippets_thumbs/s_website_form.png" -->
      </xpath>
  </template>



    <template id="sport_complex_detail_TEST" name="Sport Complex Details">
        <h1 class="col-lg-12 text-center" id="partner_name" t-field="partner.display_name"/>
        <div class="col-lg-4">
            <div t-field="partner.image_1920" t-options='{"widget": "image", "preview_image": "image_512", "class": "d-block mx-auto mb16"}'/>
            <address>
                 <div t-field="partner.self" t-options='{
                     "widget": "contact",
                     "fields": ["address", "website", "phone", "email"]
                 }'/>
            </address>
            <t t-raw="left_column or ''"/>
        </div>
        <div class="col-lg-8 mt32">
            <t t-if="partner">
                <div t-field="partner.website_description"/>
                <t groups="website.group_website_publisher">
                    <h2 class="css_non_editable_mode_hidden o_not_editable">Short Description for List View</h2>
                    <div class="css_non_editable_mode_hidden" t-field="partner.website_short_description"/>
                </t>
            </t>
            <t t-raw="right_column or ''"/>
        </div>
    </template>

